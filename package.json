{
  "name": "prisma-demo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:pull": "prisma db pull",
    "db:up": "docker compose start db || docker compose up -d db",
    "db:rm": "docker compose stop db && docker compose rm -f db && docker volume rm $(docker volume ls -qf name=prisma-demo_db_data) || true",
    "db:restart": "npm run db:rm && npm run db:up",
    "prisma:client:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "prisma": "^6.14.0",
    "prisma-zod-generator": "^1.14.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "zod": "^4.0.17"
  }
}
